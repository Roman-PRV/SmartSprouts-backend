{
    "openapi": "3.0.0",
    "info": {
        "title": "SmartSprouts API",
        "description": "API documentation for SmartSprouts backend",
        "contact": {
            "email": "support@smartsprouts.local"
        },
        "version": "1.0.0"
    },
    "paths": {
        "/api/games": {
            "get": {
                "tags": [
                    "Games"
                ],
                "summary": "Get list of active games",
                "description": "Returns a list of games that are marked as active.",
                "operationId": "getActiveGames",
                "responses": {
                    "200": {
                        "description": "Successful response with list of games",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/Game"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/games/{id}": {
            "get": {
                "tags": [
                    "Games"
                ],
                "summary": "Get details for a specific game",
                "description": "Returns the full details for a game by its ID.",
                "operationId": "getGameDetails",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "ID of the game to retrieve",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful response with game details",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Game"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Game not found"
                    }
                }
            }
        },
        "/api/games/{game}/levels": {
            "get": {
                "tags": [
                    "Levels"
                ],
                "summary": "Get levels for a game",
                "description": "Returns collection of levels for the specified game. Returns a 404 response if the underlying levels table for the game is missing.",
                "operationId": "fe7d3a6d6ec9ac0114563d91e6989873",
                "parameters": [
                    {
                        "name": "game",
                        "in": "path",
                        "description": "Game identifier (route-model bound). The controller resolves the game and its table_prefix.",
                        "required": true,
                        "schema": {
                            "type": "integer",
                            "format": "int64",
                            "example": 1
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "List of levels",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/LevelCollection"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Levels table missing",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ErrorResponse"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Bad request",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ErrorResponse"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/games/{game}/levels/{levelId}": {
            "get": {
                "tags": [
                    "Levels"
                ],
                "summary": "Get a level",
                "description": "Returns single level data for the specified game and level id. Returns a 404 response when the level or levels table is missing.",
                "operationId": "4ca0478b229d137747917ad7f59da69f",
                "parameters": [
                    {
                        "name": "game",
                        "in": "path",
                        "description": "Game identifier (route-model bound).",
                        "required": true,
                        "schema": {
                            "type": "integer",
                            "format": "int64",
                            "example": 1
                        }
                    },
                    {
                        "name": "levelId",
                        "in": "path",
                        "description": "Level id",
                        "required": true,
                        "schema": {
                            "type": "integer",
                            "format": "int64",
                            "example": 42
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Level data",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Level"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Level not found or levels table missing",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ErrorResponse"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Bad request",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ErrorResponse"
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "TrueFalseImage.AnswerRequest": {
                "description": "Request payload for validating player's answers in the True/False Image game",
                "required": [
                    "image_id",
                    "answers"
                ],
                "properties": {
                    "image_id": {
                        "description": "ID of the image level being answered",
                        "type": "integer",
                        "example": 1
                    },
                    "answers": {
                        "description": "List of player's answers for each statement",
                        "type": "array",
                        "items": {
                            "required": [
                                "statement_id",
                                "answer"
                            ],
                            "properties": {
                                "statement_id": {
                                    "description": "ID of the statement being answered",
                                    "type": "integer",
                                    "example": 10
                                },
                                "answer": {
                                    "description": "Player's answer: true or false",
                                    "type": "boolean",
                                    "example": true
                                }
                            },
                            "type": "object"
                        }
                    }
                },
                "type": "object"
            },
            "TrueFalseImage.Result": {
                "description": "Validation result for a single statement in the True/False Image game",
                "properties": {
                    "statement_id": {
                        "description": "ID of the evaluated statement",
                        "type": "integer",
                        "example": 10
                    },
                    "correct": {
                        "description": "Whether the player's answer was correct",
                        "type": "boolean",
                        "example": true
                    },
                    "is_true": {
                        "description": "The actual truth value of the statement",
                        "type": "boolean",
                        "example": true
                    },
                    "explanation": {
                        "description": "Explanation for the correct answer",
                        "type": "string",
                        "example": "Cats have pointy ears"
                    }
                },
                "type": "object"
            },
            "TrueFalseText.Level": {
                "title": "TrueFalseText.Level",
                "description": "True/False Text Level resource",
                "required": [
                    "id",
                    "title",
                    "image_url",
                    "text",
                    "statements"
                ],
                "properties": {
                    "id": {
                        "description": "Level ID",
                        "type": "integer",
                        "example": 1
                    },
                    "title": {
                        "description": "Level title",
                        "type": "string",
                        "example": "Level 1"
                    },
                    "image_url": {
                        "description": "Level image URL",
                        "type": "string",
                        "example": "https://example.com/image.png"
                    },
                    "text": {
                        "description": "Level text",
                        "type": "string",
                        "example": "Some introductory text"
                    },
                    "statements": {
                        "type": "array",
                        "items": {
                            "$ref": "#/components/schemas/TrueFalseText.Statement"
                        }
                    }
                },
                "type": "object"
            },
            "TrueFalseText.Result": {
                "description": "Validation result for a single statement in the True/False Text game",
                "properties": {
                    "statement_id": {
                        "description": "ID of the evaluated statement",
                        "type": "integer",
                        "example": 10
                    },
                    "correct": {
                        "description": "Whether the player's answer was correct",
                        "type": "boolean",
                        "example": true
                    },
                    "is_true": {
                        "description": "The actual truth value of the statement",
                        "type": "boolean",
                        "example": true
                    },
                    "explanation": {
                        "description": "Explanation for the correct answer",
                        "type": "string",
                        "example": "Cats have pointy ears"
                    }
                },
                "type": "object"
            },
            "TrueFalseText.Statement": {
                "title": "TrueFalseText.Statement",
                "description": "True/False Text Statement resource",
                "properties": {
                    "id": {
                        "description": "Statement ID",
                        "type": "integer"
                    },
                    "level_id": {
                        "description": "Level ID",
                        "type": "integer"
                    },
                    "statement": {
                        "description": "The statement text",
                        "type": "string"
                    },
                    "is_true": {
                        "description": "Whether the statement is true",
                        "type": "boolean"
                    },
                    "explanation": {
                        "description": "Explanation for the statement",
                        "type": "string"
                    }
                },
                "type": "object"
            },
            "Game": {
                "title": "Game",
                "required": [
                    "id",
                    "key",
                    "icon_url",
                    "is_active",
                    "title",
                    "description"
                ],
                "properties": {
                    "id": {
                        "type": "string",
                        "example": "1"
                    },
                    "key": {
                        "type": "string",
                        "example": "find_the_wrong"
                    },
                    "title": {
                        "description": "Full title of the game.",
                        "type": "string",
                        "example": "Find The Wrong"
                    },
                    "description": {
                        "description": "Short description of the game.",
                        "type": "string",
                        "example": "Find the incorrect statement among the options."
                    },
                    "icon_url": {
                        "type": "string",
                        "format": "url",
                        "example": "https://example.com/storage/icons/game1.png"
                    },
                    "is_active": {
                        "type": "boolean",
                        "example": true
                    }
                },
                "type": "object"
            },
            "Level": {
                "title": "Level",
                "required": [
                    "id",
                    "title",
                    "image_url"
                ],
                "properties": {
                    "id": {
                        "type": "integer",
                        "example": 1
                    },
                    "title": {
                        "type": "string",
                        "example": "Level 1"
                    },
                    "image_url": {
                        "type": "string",
                        "format": "url",
                        "example": "https://example.com/storage/levels/level1.png"
                    }
                },
                "type": "object"
            },
            "LevelCollection": {
                "type": "array",
                "items": {
                    "$ref": "#/components/schemas/Level"
                }
            },
            "ErrorResponse": {
                "properties": {
                    "message": {
                        "type": "string",
                        "example": "Not found"
                    }
                },
                "type": "object"
            }
        }
    },
    "tags": [
        {
            "name": "Levels",
            "description": "API for game levels"
        },
        {
            "name": "Games",
            "description": "Games"
        }
    ]
}