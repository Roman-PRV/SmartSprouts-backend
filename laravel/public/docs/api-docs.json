{
    "openapi": "3.0.0",
    "info": {
        "title": "SmartSprouts API",
        "description": "API documentation for SmartSprouts backend",
        "contact": {
            "email": "support@smartsprouts.local"
        },
        "version": "1.0.0"
    },
    "paths": {
        "/api/true-false-images": {
            "get": {
                "tags": [
                    "TrueFalseImage"
                ],
                "summary": "List all True/False Image levels",
                "description": "Returns a list of available game levels, each with an image and associated statements.",
                "operationId": "59d03db9b6056c1e69f6e930398fa528",
                "responses": {
                    "200": {
                        "description": "List of levels retrieved successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/TrueFalseImage.Level"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/true-false-images/{id}": {
            "get": {
                "tags": [
                    "TrueFalseImage"
                ],
                "summary": "Retrieve a specific True/False Image level",
                "operationId": "8140a79502937b47c84f088feeecb6ca",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "ID of the level to retrieve",
                        "required": true,
                        "schema": {
                            "type": "integer",
                            "example": 1
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Level data",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/TrueFalseImage.Level"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Level not found"
                    }
                }
            }
        },
        "/api/true-false-images/check": {
            "post": {
                "tags": [
                    "TrueFalseImage"
                ],
                "summary": "Validate player's answers for a True/False Image level",
                "operationId": "ba1d6ab26bf7febbd7046234941878e8",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/TrueFalseImage.AnswerRequest"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Answer validation results",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "image_id": {
                                            "type": "integer",
                                            "example": 1
                                        },
                                        "results": {
                                            "type": "array",
                                            "items": {
                                                "$ref": "#/components/schemas/TrueFalseImage.Result"
                                            }
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Validation error"
                    }
                }
            }
        },
        "/api/games": {
            "get": {
                "tags": [
                    "Games"
                ],
                "summary": "Get list of active games",
                "description": "Returns a list of games that are marked as active.",
                "operationId": "getActiveGames",
                "responses": {
                    "200": {
                        "description": "Successful response with list of games",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/Game"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/games/{id}": {
            "get": {
                "tags": [
                    "Games"
                ],
                "summary": "Get details for a specific game",
                "description": "Returns the full details for a game by its ID.",
                "operationId": "getGameDetails",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "ID of the game to retrieve",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful response with game details",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Game"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Game not found"
                    }
                }
            }
        },
        "/api/games/{game}/levels": {
            "get": {
                "tags": [
                    "Games",
                    "Levels"
                ],
                "summary": "Get levels for a game",
                "description": "Return list of levels for the specified game. Table prefix is read from the game record and used to query the corresponding levels table. Levels are ordered by created_at ascending.",
                "operationId": "getGameLevels",
                "parameters": [
                    {
                        "name": "game",
                        "in": "path",
                        "description": "Game id (route model binding)",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "List of level descriptions",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/Level"
                                    }
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Invalid table prefix or failed to read levels table",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "Invalid table prefix"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Game not found or levels table not found",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "Levels table not found"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        }
    },
    "components": {
        "schemas": {
            "TrueFalseImage.AnswerRequest": {
                "description": "Request payload for validating player's answers in the True/False Image game",
                "required": [
                    "image_id",
                    "answers"
                ],
                "properties": {
                    "image_id": {
                        "description": "ID of the image level being answered",
                        "type": "integer",
                        "example": 1
                    },
                    "answers": {
                        "description": "List of player's answers for each statement",
                        "type": "array",
                        "items": {
                            "required": [
                                "statement_id",
                                "answer"
                            ],
                            "properties": {
                                "statement_id": {
                                    "description": "ID of the statement being answered",
                                    "type": "integer",
                                    "example": 10
                                },
                                "answer": {
                                    "description": "Player's answer: true or false",
                                    "type": "boolean",
                                    "example": true
                                }
                            },
                            "type": "object"
                        }
                    }
                },
                "type": "object"
            },
            "TrueFalseImage.Level": {
                "description": "Represents a game level with an image and a list of true/false statements",
                "properties": {
                    "id": {
                        "description": "Unique identifier of the level",
                        "type": "integer",
                        "example": 1
                    },
                    "title": {
                        "description": "Title of the level",
                        "type": "string",
                        "example": "Animals"
                    },
                    "image_url": {
                        "description": "URL of the image associated with the level",
                        "type": "string",
                        "format": "url",
                        "example": "https://example.com/image.jpg"
                    },
                    "statements": {
                        "description": "Array of statements for this level",
                        "type": "array",
                        "items": {
                            "properties": {
                                "id": {
                                    "description": "Statement identifier",
                                    "type": "integer",
                                    "example": 10
                                },
                                "statement": {
                                    "description": "Text of the statement to evaluate",
                                    "type": "string",
                                    "example": "This is a cat"
                                }
                            },
                            "type": "object"
                        }
                    }
                },
                "type": "object"
            },
            "TrueFalseImage.Result": {
                "description": "Validation result for a single statement in the True/False Image game",
                "properties": {
                    "statement_id": {
                        "description": "ID of the evaluated statement",
                        "type": "integer",
                        "example": 10
                    },
                    "correct": {
                        "description": "Whether the player's answer was correct",
                        "type": "boolean",
                        "example": true
                    },
                    "is_true": {
                        "description": "The actual truth value of the statement",
                        "type": "boolean",
                        "example": true
                    },
                    "explanation": {
                        "description": "Explanation for the correct answer",
                        "type": "string",
                        "example": "Cats have pointy ears"
                    }
                },
                "type": "object"
            },
            "TrueFalseImage.Statement": {
                "description": "A statement related to the image that must be evaluated as true or false",
                "properties": {
                    "id": {
                        "description": "Unique identifier of the statement",
                        "type": "integer",
                        "example": 10
                    },
                    "statement": {
                        "description": "Text of the statement to evaluate",
                        "type": "string",
                        "example": "This is a cat"
                    }
                },
                "type": "object"
            },
            "Game": {
                "title": "Game",
                "required": [
                    "id",
                    "key",
                    "icon_url",
                    "is_active",
                    "title",
                    "description"
                ],
                "properties": {
                    "id": {
                        "type": "integer",
                        "example": 1
                    },
                    "key": {
                        "type": "string",
                        "example": "find_the_wrong"
                    },
                    "title": {
                        "description": "Full title of the game.",
                        "type": "string",
                        "example": "Find The Wrong"
                    },
                    "description": {
                        "description": "Short description of the game.",
                        "type": "string",
                        "example": "Find the incorrect statement among the options."
                    },
                    "icon_url": {
                        "type": "string",
                        "format": "url",
                        "example": "https://example.com/storage/icons/game1.png"
                    },
                    "is_active": {
                        "type": "boolean",
                        "example": true
                    }
                },
                "type": "object"
            },
            "Level": {
                "title": "Level",
                "required": [
                    "id",
                    "title",
                    "image_url"
                ],
                "properties": {
                    "id": {
                        "type": "integer",
                        "example": 1
                    },
                    "title": {
                        "type": "string",
                        "example": "Level 1"
                    },
                    "image_url": {
                        "type": "string",
                        "format": "url",
                        "example": "https://example.com/storage/levels/level1.png"
                    }
                },
                "type": "object"
            }
        }
    },
    "tags": [
        {
            "name": "TrueFalseImage",
            "description": "TrueFalseImage"
        },
        {
            "name": "Games",
            "description": "Games"
        },
        {
            "name": "Levels",
            "description": "Levels"
        }
    ]
}